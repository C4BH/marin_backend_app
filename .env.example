# ===========================================
# SERVER CONFIGURATION
# ===========================================

# Sunucu portu (varsayılan: 2344)
PORT=2344

# API versiyonu (varsayılan: v1)
API_VERSION=v1

# Çalışma ortamı (development, production, test)
NODE_ENV=development

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# MongoDB bağlantı URI'si
MONGODB_URI=mongodb://localhost:27017/marin_dev

# ===========================================
# JWT CONFIGURATION
# ===========================================

# JWT Secret Key (Access Token için) - GÜVENLİ BİR DEĞER KULLANIN!
# Üretmek için: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-jwt-secret-key-here

# JWT Refresh Secret Key (Refresh Token için)
JWT_REFRESH_SECRET=your-jwt-refresh-secret-key-here

# ===========================================
# CORS CONFIGURATION
# ===========================================

# İzin verilen origin'ler (virgülle ayrılmış)
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# ===========================================
# RATE LIMITING CONFIGURATION
# ===========================================

# Rate limit pencere süresi (milisaniye)
RATE_LIMIT_WINDOW_MS=900000

# Pencere başına maksimum istek sayısı
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# EMAIL CONFIGURATION (OPTIONAL)
# ===========================================

# Mailtrap (Development/Test için)
MAILTRAP_TOKEN=your-mailtrap-token-here
MAILTRAP_ENDPOINT=https://send.api.mailtrap.io/

# ===========================================
# LOGGING CONFIGURATION
# ===========================================

# Log seviyesi (error, warn, info, debug)
LOG_LEVEL=debug
